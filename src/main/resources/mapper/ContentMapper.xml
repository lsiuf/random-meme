<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 内容表指定工作空间，要与接口名相同 -->
<mapper namespace="com.randommeme.dao.IContentDao">

    <select id="getMinAndMaxId" resultType="com.randommeme.entity.ContentExtremeValuePo">
        SELECT min(id) AS minId, max(id) AS maxId FROM t_content
        <if test="classifyCode != null">
            WHERE classify_code = #{classifyCode}
        </if>
    </select>
</mapper>